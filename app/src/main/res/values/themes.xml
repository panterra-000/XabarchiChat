<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.XabarchiChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_light_grey</item>
        <item name="colorPrimaryVariant">@color/main_light_grey</item>
        <item name="colorOnPrimary">@color/main_light_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/main_light_grey</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="title_text_style">
        <item name="android:textSize">@dimen/txt_app_title_size</item>
        <item name="android:textColor">@color/main_dark_blue</item>
    </style>

    <style name="delete_title_text_style">
        <item name="android:textSize">@dimen/txt_app_title_size</item>
        <item name="android:textColor">@color/main_dark_blue</item>
    </style>

    <style name="q_title_text_style">
        <item name="android:textSize">@dimen/txt_main_size</item>
        <item name="android:textColor">@color/main_dark_red</item>
        <item name="paddingEnd">100dp</item>
    </style>

    <style name="red_text_style">
        <item name="android:textSize">@dimen/txt_main_size</item>
        <item name="android:textColor">@color/main_red</item>
    </style>

    <style name="blue_toolbar_text_style">
        <item name="android:textSize">@dimen/txt_middle_size</item>
        <item name="android:textColor">@color/main_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="blue_contacts_text_style">
        <item name="android:textSize">@dimen/txt_main_size</item>
        <item name="android:textColor">@color/main_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="big_name_text_style">
        <item name="android:textSize">@dimen/txt_title_name_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="time_text_style">
        <item name="android:textSize">@dimen/txt_time_size</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="txt_last_message">
        <item name="android:textSize">@dimen/txt_last_message_size</item>
        <item name="android:textColor">@color/text_dark_grey</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="reset_password_text_style">
        <item name="android:textSize">@dimen/txt_middle_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="toolbar_title_text_style">
        <item name="android:textSize">@dimen/txt_main_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="edit_text_style">
        <item name="android:textSize">@dimen/txt_main_size</item>
        <item name="singleLine">true</item>
        <item name="android:padding">15dp</item>
        <item name="hintTextColor">@color/main_light_grey</item>
        <item name="android:textColor">@color/text_main</item>
    </style>

    <style name="et_search_style">
        <item name="android:textSize">@dimen/txt_main_size</item>
        <item name="singleLine">true</item>
        <item name="android:padding">10dp</item>
        <item name="hintTextColor">@color/main_light_grey</item>
        <item name="android:textColor">@color/text_main</item>
    </style>

    <style name="btn_submit_style">
        <item name="android:textSize">@dimen/txt_main_size</item>
        <item name="android:padding">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>